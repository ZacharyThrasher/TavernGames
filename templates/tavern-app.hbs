<div class="tavern-container" data-theme="{{tableTheme}}" {{#if riskLevel}}data-risk="{{riskLevel}}"{{/if}} data-pot-tier="{{potTier}}">
  {{!-- Header --}}
  <header class="tavern-header">
    <div class="tavern-title">
      <div class="tavern-logo">
        <i class="{{flavorIcon}}"></i>
      </div>
      <div class="tavern-title-text">
        <h1>Twenty-One
          <i class="fa-solid fa-circle-question help-icon"
            style="font-size: 0.6em; color: #aaa; cursor: pointer; vertical-align: top;" data-action="help"
            title="Rules & Help"></i>
          <i class="fa-solid fa-scroll help-icon"
            style="font-size: 0.6em; color: #ffd700; cursor: pointer; vertical-align: top; margin-left: 5px; position: relative;"
            data-action="toggleLogs" title="Open Private Log">
            {{#if hasUnreadLogs}}
            <span class="notification-badge"></span>
            {{/if}}
          </i>
        </h1>
        <span class="tavern-subtitle">{{flavorSubtitle}}</span>
      </div>
    </div>
    <div class="tavern-info">
      {{#if isPlayingAsNpc}}
      <div class="npc-wallet-display" title="NPC Table Wallet">
        <i class="fa-solid fa-sack-dollar" style="color: #ffd700;"></i>
        <span class="wallet-amount">{{npcWallet}} gp</span>
      </div>
      {{/if}}
      {{#if isPlaying}}
      <div class="pot-display">
        <i class="fa-solid fa-coins"></i>
        <span class="pot-amount {{#if pot}}pot-pulse{{/if}}">{{pot}} gp</span>
        <span class="pot-label">in the pot</span>
      </div>
      {{else}}
      <div class="ante-display">
        <span class="ante-label">Ante:</span>
        <span class="ante-amount">{{ante}} gp</span>
      </div>
      {{/if}}
    </div>
  </header>

  <section class="tavern-pulseband" data-intensity="{{tableIntensity}}">
    <article class="pulse-card pulse-phase">
      <span class="pulse-label">Phase</span>
      <span class="pulse-value">{{phasePulseLabel}}</span>
      <span class="pulse-note">{{phasePulseHint}}</span>
    </article>

    <article class="pulse-card pulse-pot">
      <span class="pulse-label">Pot Heat</span>
      <span class="pulse-value">{{potHeatLabel}}</span>
      <div class="pulse-meter" role="presentation">
        <span class="pulse-meter-fill" style="--pulse-fill: {{potHeatPct}};"></span>
      </div>
    </article>

    <article class="pulse-card pulse-pressure">
      <span class="pulse-label">Table Pressure</span>
      <span class="pulse-value">{{pressureLabel}}</span>
      <div class="pulse-meter" role="presentation">
        <span class="pulse-meter-fill" style="--pulse-fill: {{pressurePct}};"></span>
      </div>
    </article>

    <article class="pulse-card pulse-spotlight">
      <span class="pulse-label">Spotlight</span>
      <span class="pulse-value">{{spotlightName}}</span>
      <span class="pulse-note">{{spotlightHint}}</span>
    </article>

    <article class="pulse-card pulse-oracle {{oracleTone}}">
      <span class="pulse-label">Oracle</span>
      <span class="pulse-value">{{oracleLabel}}</span>
      <span class="pulse-note">{{oracleHint}}</span>
    </article>
  </section>

  {{#if pulseFeed.length}}
  <section class="tavern-feedline" aria-live="polite">
    {{#each pulseFeed}}
    <div class="feedline-item {{this.typeClass}}">
      <i class="{{this.icon}}"></i>
      <span>{{this.text}}</span>
    </div>
    {{/each}}
  </section>
  {{/if}}

  {{!-- Main game area --}}
  <main class="tavern-main">
    {{!-- Table area with players --}}
    <section class="tavern-table-area">
      {{> "modules/tavern-dice-master/templates/parts/table.hbs"}}
    </section>

    {{!-- Right sidebar --}}
    <aside class="tavern-sidebar">
      {{!-- Controls --}}
      <div class="tavern-controls-panel">
        {{> "modules/tavern-dice-master/templates/parts/controls.hbs"}}
      </div>
    </aside>
  </main>

  {{!-- Footer --}}
  <footer class="tavern-footer">
    {{#if hasGM}}
    <span class="gm-status online"><i class="fa-solid fa-circle"></i> GM Online</span>
    {{else}}
    <span class="gm-status offline"><i class="fa-solid fa-circle"></i> GM Required</span>
    {{/if}}
    {{#if atmosphereLine}}
    <span class="atmosphere-line" title="{{status}}">{{atmosphereLine}}</span>
    {{else}}
    <span class="game-status">{{status}}</span>
    {{/if}}
    {{#if isGM}}
    <button type="button" class="reset-btn" data-action="reset" title="Reset Table">
      <i class="fa-solid fa-rotate-left"></i>
    </button>
    {{/if}}
  </footer>
</div>
