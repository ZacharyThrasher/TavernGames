<div class="cinematic-cut-in type-{{type}} {{#if isVersus}}versus-mode{{/if}}">
    <div class="cinematic-stripe" style="--stripe-color: {{color}}"></div>

    <div class="cinematic-content">
        {{#if isVersus}}
        {{!-- Versus Mode: Split Screen --}}
        <div class="portrait-container versus left">
            <img src="{{img}}" alt="{{name}}" class="portrait-img" />
            <div class="portrait-name">{{name}}</div>
            {{#if resultData}}
            <div class="portrait-result">{{resultData.attackerRoll}}</div>
            {{/if}}
        </div>

        <div class="versus-center">
            {{#if resultData}}
            <div class="versus-outcome {{resultData.outcomeClass}}">{{resultData.outcome}}</div>
            {{else}}
            <h1 class="cinematic-title">{{text}}</h1>
            <div class="versus-badge">VS</div>
            {{/if}}
        </div>

        <div class="portrait-container versus right">
            <img src="{{targetImg}}" alt="{{targetName}}" class="portrait-img" />
            <div class="portrait-name">{{targetName}}</div>
            {{#if resultData}}
            <div class="portrait-result">{{resultData.defenderRoll}}</div>
            {{/if}}
        </div>
        {{else}}
        {{!-- Classic Single Mode --}}
        <div class="single-mode-container">
            {{#if img}}
            <div class="portrait-container single initiator">
                <img src="{{img}}" alt="{{name}}" class="portrait-img" />
                <div class="portrait-name">{{name}}</div>
            </div>
            {{/if}}

            <div class="text-container">
                {{#if resultData}}
                {{!-- Impactful Result Text --}}
                <div class="main-result {{resultData.outcomeClass}}">{{resultData.outcome}}</div>
                {{#if resultData.amount}}
                <div class="result-detail">Wins <span class="gold-text">{{resultData.amount}}gp</span>!</div>
                {{else if resultData.detail}}
                <div class="result-detail">{{{resultData.detail}}}</div>
                {{/if}}
                {{else}}
                <h1 class="cinematic-title">{{text}}</h1>
                {{/if}}
            </div>

            {{#if targetImg}}
            <div class="portrait-container single target">
                <img src="{{targetImg}}" alt="{{targetName}}" class="portrait-img" />
                <div class="portrait-name">{{targetName}}</div>
            </div>
            {{/if}}
        </div>
        {{/if}}

        {{!-- V5.12: Particle Container --}}
        <div class="cinematic-particles"></div>
    </div>

    {{!-- V13 Juice: Sparkles for Victory/Critical --}}
    {{#if (or isVictory isCritical)}}
    <div class="cinematic-sparkles"></div>
    {{/if}}
</div>