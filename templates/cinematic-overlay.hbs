<div class="cinematic-cut-in type-{{type}} {{#if isVersus}}versus-mode{{/if}}">
    <div class="cinematic-stripe" style="--stripe-color: {{color}}"></div>

    <div class="cinematic-content">
        {{#if isVersus}}
        {{!-- Versus Mode: Split Screen --}}
        <div class="portrait-container left">
            <img src="{{img}}" alt="{{name}}" class="portrait-img"
                style="display: block; opacity: 1; position: relative; z-index: 10;" />
            <div class="portrait-name">{{name}}</div>
            {{#if resultData}}
            <div class="portrait-result">{{resultData.attackerRoll}}</div>
            {{/if}}
        </div>

        <div class="versus-center">
            {{#if resultData}}
            <div class="versus-outcome {{resultData.outcomeClass}}">{{resultData.outcome}}</div>
            {{else}}
            <h1 class="cinematic-title">{{text}}</h1>
            <div class="versus-badge">VS</div>
            {{/if}}
        </div>

        <div class="portrait-container right">
            <img src="{{targetImg}}" alt="{{targetName}}" class="portrait-img"
                style="display: block; opacity: 1; position: relative; z-index: 10;" />
            <div class="portrait-name">{{targetName}}</div>
            {{#if resultData}}
            <div class="portrait-result">{{resultData.defenderRoll}}</div>
            {{/if}}
        </div>
        {{else}}
        {{!-- Classic Single Mode --}}
        <div class="portrait-container">
            <img src="{{img}}" alt="{{name}}" class="portrait-img" />
            <div class="portrait-flash"></div>
        </div>

        <div class="text-container">
            <h1 class="cinematic-title">{{text}}</h1>
            <h2 class="cinematic-subtitle">{{name}}</h2>
        </div>
        {{/if}}
    </div>

    {{!-- V13 Juice: Sparkles for Victory/Critical --}}
    {{#if (or isVictory isCritical)}}
    <div class="cinematic-sparkles"></div>
    {{/if}}
</div>