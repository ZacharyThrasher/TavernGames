<div class="tavern-game">
  {{#if twentyOne}}
    <h2>Twenty-One</h2>
    <p class="hint">Rolls are hidden until resolution. Take turns rolling two dice, then one die per turn.</p>
    <div class="twenty-actions">
      <div class="dice-picks">
        <button data-action="roll" data-die="20">d20</button>
        <button data-action="roll" data-die="12">d12</button>
        <button data-action="roll" data-die="10">d10</button>
        <button data-action="roll" data-die="8">d8</button>
        <button data-action="roll" data-die="6">d6</button>
        <button data-action="roll" data-die="4">d4</button>
      </div>
      <button data-action="hold" class="secondary">Hold</button>
      {{#if isGM}}
        <button data-action="resolve" class="secondary">Resolve Now</button>
      {{/if}}
    </div>
    <div class="turn-info">
      <span>Current turn: {{lookup (lookup state.players state.tableData.currentPlayer) "name"}}</span>
    </div>
  {{/if}}

  {{#if liarsDice}}
    <h2>Liar's Dice</h2>
    <p class="hint">Bids are public. Rolls are private until a call.</p>
    <div class="liars-actions">
      <div class="bid-grid">
        {{#each bidQuantities}}
          {{#each ../bidFaces}}
            <button data-action="bid" data-quantity="{{../this}}" data-face="{{this}}">
              {{../this}} x {{this}}
            </button>
          {{/each}}
        {{/each}}
      </div>
      <button data-action="call" class="secondary">Call Liar</button>
    </div>
  {{/if}}
</div>
